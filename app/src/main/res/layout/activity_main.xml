<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moody_blue"
    tools:context=".MainActivity">

    <com.gotokeep.su.widget.checkcalandarview.DayflowSummaryView
        android:id="@+id/viewSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        app:pointSize="10dp"
        app:pointSpacing="5dp"
        app:weekTextSize="9sp"
        app:monthTextSize="11sp"
        app:yearTextSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
